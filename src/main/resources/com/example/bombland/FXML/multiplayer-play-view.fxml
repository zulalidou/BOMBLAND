<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import java.net.URL?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.Region?>

<VBox fx:id="playPageContainer" xmlns:fx="http://javafx.com/fxml" alignment="CENTER">
    <stylesheets>
        <URL value="@../CSS/multiplayer-play.css"/>
    </stylesheets>

    <StackPane fx:id="playPageContainerInner">
        <VBox fx:id="stackpaneChild1">
            <HBox fx:id="playPageContainerHeader">
                <HBox fx:id="backBtnContainer" alignment="CENTER">
                    <Button fx:id="backBtn" onAction="#displayLeaveGamePopup">
                        <graphic>
                            <ImageView fx:id="backBtnImgView"/>
                        </graphic>
                    </Button>
                </HBox>

                <Label fx:id="totalBombsLbl"/>
                <Label fx:id="player1PointsLbl"/>
                <Label fx:id="timeElapsedLbl"/>
                <Label fx:id="player2PointsLbl"/>
                <Label fx:id="flagsLeftLbl"/>
                <VBox fx:id="emptySpace"/>
            </HBox>

            <VBox fx:id="gridContainer"/>
        </VBox>

        <VBox fx:id="gameOverPopup" managed="false" visible="false">
            <Label fx:id="gameOverPopupTitle"/>

            <VBox fx:id="gameOverPopupImgContainer" alignment="CENTER">
                <ImageView fx:id="gameOverPopupImg"/>
            </VBox>

            <VBox fx:id="gameOverPopupRoundContainer" alignment="CENTER">
                <Label fx:id="gameOverPopupRoundLabel" text="ROUND X"/>

                <HBox fx:id="gameOverPopupPointsContainer">
                    <Label fx:id="gameOverPopupPlayer1Points"/>
                    <Region HBox.hgrow="ALWAYS"/>
                    <Label fx:id="gameOverPopupPlayer2Points"/>
                </HBox>
            </VBox>

            <VBox fx:id="gameOverPopupStatsContainer" alignment="CENTER">
                <Label fx:id="gameOverPopupStatsLabel" text="STATS"/>

                <HBox fx:id="gameOverPopupNameContainer">
                    <Label fx:id="gameOverPopupPlayer1Name"/>
                    <Region HBox.hgrow="ALWAYS"/>
                    <Label fx:id="gameOverPopupPlayer2Name"/>
                </HBox>

                <HBox>
                    <Label fx:id="gameOverPopupPlayer1Wins"/>
                    <Region HBox.hgrow="ALWAYS"/>
                    <Label fx:id="gameOverPopupTies"/>
                    <Region HBox.hgrow="ALWAYS"/>
                    <Label fx:id="gameOverPopupPlayer2Wins"/>
                </HBox>

                <HBox fx:id="gameOverPopupReadyStateContainer">
                    <Label fx:id="gameOverPopupPlayer1ReadyStatus" text="NOT READY"/>
                    <Region HBox.hgrow="ALWAYS"/>
                    <Label fx:id="gameOverPopupPlayer2ReadyStatus" text="NOT READY"/>
                </HBox>
            </VBox>

            <HBox fx:id="gameOverPopupButtonsContainer" alignment="CENTER">
                <Button fx:id="gameOverPopupPlayAgainBtn" text="Play Again" styleClass="playAgainBtn" onAction="#playAgain"/>
                <Region HBox.hgrow="ALWAYS"/>
                <Button fx:id="gameOverPopupGoToRoomBtn" text="Go To Room" styleClass="mainMenuBtn" onAction="#displayLeaveGamePopup"/>
            </HBox>
        </VBox>

        <VBox fx:id="leaveGamePopup" managed="false" visible="false">
            <Label fx:id="leaveGamePopupTitle" text="LEAVE GAME"/>

            <VBox fx:id="leaveGamePopupImgContainer" alignment="CENTER">
                <ImageView fx:id="leaveGamePopupImg"/>
            </VBox>

            <Label fx:id="leaveGamePopupErrorMsg" text="Are you sure you want to leave?"/>

            <HBox fx:id="leaveGamePopupButtonsContainer" alignment="CENTER">
                <Button fx:id="leaveGamePopupNoBtn" text="No, stay in game" styleClass="playAgainBtn" onAction="#closeLeaveGamePopup"/>
                <Button fx:id="leaveGamePopupYesBtn" text="Yes, leave game" styleClass="mainMenuBtn" onAction="#confirmToLeaveGameMap"/>
            </HBox>
        </VBox>

        <VBox fx:id="kickOutPlayer2Popup" managed="false" visible="false">
            <Label fx:id="kickOutPlayer2PopupTitle" text="GAME MAP CLOSED"/>

            <VBox fx:id="kickOutPlayer2PopupImgContainer" alignment="CENTER">
                <ImageView fx:id="kickOutPlayer2PopupImg"/>
            </VBox>

            <Label fx:id="kickOutPlayer2PopupErrorMsg" text="The other player has left, so the game map has been closed."/>

            <HBox fx:id="kickOutPlayer2PopupButtonsContainer" alignment="CENTER">
                <Button fx:id="kickOutPlayer2PopupCloseButton" text="OK" onAction="#confirmToLeaveGameMap"/>
            </HBox>
        </VBox>

        <VBox fx:id="player2DisconnectedPopup" managed="false" visible="false">
            <Label fx:id="player2DisconnectedPopupTitle" text="OPPONENT DISCONNECTED"/>

            <VBox alignment="CENTER" fx:id="player2DisconnectedPopupImgContainer">
                <ImageView fx:id="player2DisconnectedPopupImg"/>
            </VBox>

            <Label fx:id="player2DisconnectedPopupErrorMsg" text="Player2 disconnected from the server, so the game has ended."/>

            <HBox fx:id="player2DisconnectedPopupButtonsContainer" alignment="CENTER">
                <Button fx:id="player2DisconnectedPopupCloseButton" text="OK" onAction="#goToRoom"/>
            </HBox>
        </VBox>
    </StackPane>
</VBox>