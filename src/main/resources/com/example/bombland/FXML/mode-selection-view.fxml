<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.control.Label?>

<VBox fx:id="modeSelectionPage" xmlns:fx="http://javafx.com/fxml">
    <stylesheets>
        <URL value="@../CSS/mode-selection.css"/>
    </stylesheets>

    <VBox fx:id="modeSelectionPageContainer">
        <HBox fx:id="modeSelectionPageContainerTop">
            <HBox fx:id="modeSelectionPageContainerTopLeftChild" alignment="CENTER_LEFT">
                <Button fx:id="backBtn" onAction="#goToMainMenu">
                    <graphic>
                        <ImageView fitWidth="20" preserveRatio="true">
                            <Image url="/com/example/bombland/images/back-button.png"/>
                        </ImageView>
                    </graphic>
                </Button>
            </HBox>

            <HBox fx:id="modeSelectionPageContainerTopMiddleChild">
                <Label fx:id="modeSelectionPageTitle" text="Select Mode"/>
            </HBox>

            <HBox fx:id="modeSelectionPageContainerTopRightChild" />
        </HBox>

        <VBox fx:id="modeSelectionPageContainerBottom" alignment="CENTER">
            <VBox fx:id="modeSelectionPageContainerBottomInner" alignment="CENTER">
                <Button fx:id="singlePlayerBtn" text="Single Player" onAction="#pickSinglePlayer"/>
                <Button fx:id="multiplayerBtn" text="Multiplayer" onAction="#pickMultiplayer"/>
            </VBox>
        </VBox>
    </VBox>
</VBox>
